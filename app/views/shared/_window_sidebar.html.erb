<% content_for :sidebar do %>
  <ul id="navigation">
    <% in_releases = @release || @releases %>
    <% for key, name in TimeConstraints.all %>
      <% path = key == 'all-time' ? contributors_path : contributors_in_time_window_path(key) %>
      <%# TODO: clean this %>
      <%= sidebar_tab name, (!in_releases && @time_window.nil? && key == 'all-time') || @time_window == key, path %>
    <% end %>
    <%= sidebar_tab 'Releases', @release || @releases, releases_path %>
  </ul>
<% end %>
