<% @title = add_window_to("Rails Contributors", @window) %>

<h1 id="title">
  <%= @title %><br/>
  <span class="listing-total">Showing <%= pluralize @contributors.size, 'person' %></span>
</h1>
<%= link_to "See names mapping &rarr;", names_mapping_path, :class => "name-mapping" %>

<div id="table-wrap">
  <table>
    <tr class="header">
      <th></th>
      <th>Name</th>
      <th>Commits</th>
    </tr>
    <%= render :partial => 'contributor', :collection => @contributors %>
  </table>
</div>

<% content_for :sidebar do %>
    <h4>
      Commits from
    </h4>
    <ul id="navigation">
      <%= sidebar_tab 'All time', @window.blank?, contributors_path %>
      <% for key, name in TimeConstraints::ALL_EXCEPT_ALL_TIME %>
        <%= sidebar_tab name, @window == key, contributors_path(:window => key) %>
      <% end %>
    </ul>
<% end %>
